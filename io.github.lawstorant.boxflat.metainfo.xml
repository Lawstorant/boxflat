<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.lawstorant.boxflat</id>

  <name>Boxflat</name>
  <summary>Moza Racing configurator</summary>

  <developer id="io.github.lawstorant">
    <name>Tomasz Paku≈Ça</name>
  </developer>

  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <recommends>
    <display_length compare="ge">600</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      This application enables you to change you Moza Racing hardware settings.
    </p>
    <p>
      The table of supported settings compared to Pit House can be found on the project website.
      It supports most of the device types including:
    </p>
    <ul>
      <li>Wheelbases</li>
      <li>Wheels</li>
      <li>Pedals</li>
      <li>Handbrakes</li>
      <li>Sequential/H-Pattern shifters</li>
    </ul>
    <p>
      Note: The udev rules found in the GitHub repository need to be installed for the application to work properly.
    </p>
  </description>

  <launchable type="desktop-id">io.github.lawstorant.boxflat.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <caption>Base settings</caption>
      <image>https://github.com/Lawstorant/boxflat/raw/main/screens/base.png</image>
    </screenshot>
    <screenshot>
      <caption>Pedals settings</caption>
      <image>https://github.com/Lawstorant/boxflat/raw/main/screens/pedals.png</image>
    </screenshot>
    <screenshot>
      <caption>Sequential settings</caption>
      <image>https://github.com/Lawstorant/boxflat/raw/main/screens/sequential.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="v1.10.1" date="2024-07-31">
      <description>
        <p>Initial flatpak version</p>
      </description>
    </release>
  </releases>
  <url type="homepage">https://github.com/Lawstorant/boxflat</url>
